{
  "compilerOptions": {
    "target": "esNext",
    "module": "esNext",
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "lib-es5",
    "strict": true,
    "esModuleInterop": true,
    "incremental": true,
    "downlevelIteration": true,
    "resolveJsonModule": true
  },
  "include": ["lib/**/*", "typings/**/*"]
}
